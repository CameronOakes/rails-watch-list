<nav class="navbar navbar-expand-lg navbar-light bg-light border">
    <div class="collapse navbar-collapse">
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <li class="nav-item active">
        <%= link_to "Create New List", new_list_path, class: "btn nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Back to lists", lists_path, class: "btn nav-link" %>
      </li>
    </ul>
  </div>
</nav>



<div class="container">
  <h2><%= @list.name %></h2>
  <div class="row">
    <% @list.bookmarks.each do |b| %>
      <div class="col-3 mb-4">
        <div class="card shadow-drop">
          <img src="<%= b.movie.poster_url %>" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title font-weight-bold"><%= b.movie.title %> - <strong><%= b.movie.rating %></strong> <i class="fa-regular fa-star fa-sm"></i></i></h5>
            <%= b.movie.overview %>
            <div class="mt-2">
              <p><i class="fa-sharp fa-solid fa-quote-left fa-xs"></i> <%= b.comment %></p>
              <%= link_to "Delete this bookmark", bookmark_path(b), class: "btn btn-outline-danger" ,data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Bookmark Movie", new_list_bookmark_path(@list), class: "btn btn-success" %>
</div>
