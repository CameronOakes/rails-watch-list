<nav class="navbar navbar-expand-lg navbar-light bg-light border">
    <div class="collapse navbar-collapse">
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <li class="nav-item active">
        <%= link_to "Create New List", new_list_path, class: "btn nav-link" %>
      </li>
    </ul>
  </div>
</nav>

<div class="image-container" style="">
  <img src="https://www.qub.ac.uk/schools/media/Media,842905,en.jpg" alt="Responsive image" class="w-100">
  <div class="overlay-text" style="background-color: rgba(0, 0, 0, 0.5)">
    <h4>Movie Watch List</h4>
    <p class="m-0">Save your favourite movies</p>
  </div>
</div>



<div class="container mt-2">

  <div class="row">
    <% @lists.each do |i| %>
      <div class="col-3 mb-4">
        <div class="card shadow-drop">
          <div class="card-body">
            <%= link_to i.name, list_path(i), class: "card-header" %>
            <%= link_to "Delete this list", list_path(i), class: "link-danger link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
